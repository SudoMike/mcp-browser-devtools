{
  "playwright": {
    "baseURL": "http://localhost:3456",
    "headless": true
  },
  "hooks": {
    "modulePath": "./fixtures/test-hooks.ts",
    "scenarios": {
      "default": {
        "use": "defaultScenario",
        "description": "Default test scenario for guest users"
      },
      "loggedIn": {
        "use": "testLogin",
        "description": "Test scenario with authenticated user"
      },
      "iphone": {
        "use": "deviceTest",
        "description": "iPhone 13 device emulation",
        "device": "iPhone 13"
      },
      "ipad": {
        "use": "deviceTest",
        "description": "iPad Pro 11 device emulation",
        "device": "iPad Pro 11"
      },
      "pixel": {
        "use": "deviceTest",
        "description": "Pixel 7 device emulation",
        "device": "Pixel 7"
      }
    }
  },
  "policy": {
    "idleMs": 60000
  },
  "timeouts": {
    "navigationMs": 15000,
    "queryMs": 8000
  }
}
