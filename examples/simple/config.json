{
  "playwright": {
    "baseURL": "https://example.com",
    "headless": true,
    "traceOutputPath": "./playwright-trace.zip"
  },
  "hooks": {
    "modulePath": "./hooks.js",
    "scenarios": {
      "default": {
        "use": "startDefault",
        "description": "Start the browser at the homepage as a guest user"
      },
      "loggedIn": {
        "use": "startLoggedIn",
        "description": "Start the browser with an authenticated user session"
      }
    }
  },
  "policy": {
    "singleInstance": true,
    "idleMs": 300000,
    "allowedOrigins": ["https://example.com"]
  },
  "timeouts": {
    "navigationMs": 15000,
    "queryMs": 8000
  }
}
