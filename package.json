{
  "name": "mcp-browser-devtools",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for DevTools-style browser inspection via Playwright",
  "main": "dist/index.js",
  "bin": {
    "mcp-browser-devtools": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "tsc && npm run lint && npm run format:check"
  },
  "keywords": [
    "mcp",
    "devtools",
    "playwright",
    "cdp",
    "browser",
    "inspection"
  ],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@eslint/js": "^9.36.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.1",
    "eslint": "^9.36.0",
    "express": "^5.1.0",
    "playwright": "^1.55.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "dotenv": "^17.2.3"
  }
}
